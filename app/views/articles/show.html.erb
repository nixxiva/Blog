<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
<%= link_to "See all comments", article_comments_path(@article) %> </br>
<%= link_to "Add a comment", new_article_comment_path(@article) %> </br>
<%= link_to "Back to articles", articles_path %>

